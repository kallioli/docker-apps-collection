{
    "version": "2",
    "templates": [{
        "type": 2,
        "title": "MariaDB",
        "description": "MariaDB Server",
        "note": "<p>Application website : <a href=\"https:\/\/mariadb.org\/\" target=\"_blank\" rel=\"noopener\">mariadb.org<\/a>",
        "categories": [
            "database"
        ],
        "platform": "linux",
        "logo": "https://raw.githubusercontent.com/kallioli/docker-apps-collection/master/img/mariadb_logo.png",
        "repository": {
            "stackfile": "stack/mariadb.yml",
            "url": "https://github.com/kallioli/docker-apps-collection"
        },
        "env": [{
            "name": "SERVICE",
            "label": "Service name",
            "description": "example: mariadb"
        },
        {
            "name": "DB_ROOT_PASS",
            "label": "Password of root user"
        },
        {
            "name": "URL_LOKI",
            "label": "Loki service URL",
            "description": "example : http://loki.domain.tld/loki/api/v1/push"
        },
        {
            "name": "DATA_LOCATION",
            "label": "Location of service data",
            "description": "example : /apps/'service'"
        },
        {
            "name": "NETWORK_DATA",
            "label": "Data network name",
            "description": "example: data-network"
        }]
    },

    {
        "type": 2,
        "title": "Matomo",
        "description": "Free and open source web stats tool.",
        "note": "<p>Application website : <a href=\"https:\/\/matomo.org/\" target=\"_blank\" rel=\"noopener\">matomo.org<\/a>",
        "categories": [
            "utility"
        ],
        "platform": "linux",
        "logo": "https://raw.githubusercontent.com/kallioli/docker-apps-collection/master/img/matomo_logo.png",
        "repository": {
            "stackfile": "stack/matomo.yml",
            "url": "https://github.com/kallioli/docker-apps-collection"
        },
        "env": [{
            "name": "SERVICE",
            "label": "Service name",
            "description": "example: matomo"
        },
        {
            "name": "DB_USER",
            "label": "Database username",
            "description": "example: matomo"
        },
        {
            "name": "DB_PASS",
            "label": "Database password"
        },
        {
            "name": "DB_HOST",
            "label": "Database hostname server",
            "description": "exemple : mariadb, postgresql"
        },
        {
            "name": "DB_NAME",
            "label": "Database name",
            "description": "exemple : matomo"
        },
        {
            "name": "DB_PREFIX",
            "label": "Database prefix",
            "description": "exemple : matomo_"
        },
        {
            "name": "URL_LOKI",
            "label": "Loki service URL",
            "description": "example : http://loki.domain.tld/loki/api/v1/push"
        },
        {
            "name": "FQDN",
            "label": "Fully qualified domain name",
            "description": "example : matomo.domain.tld"
        },
        {
            "name": "DATA_LOCATION",
            "label": "Location of service data",
            "description": "example : /apps/'service'"
        },
        {
            "name": "NETWORK_APP",
            "label": "Application network name",
            "description": "example: app-network"
        },
        {
            "name": "NETWORK_DATA",
            "label": "Data network name",
            "description": "example: data-network"
        }]
    }
    ]
}